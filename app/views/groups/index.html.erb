<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.order(:name).each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flex_col" >

  <div class="flex_row" >
    <%= button_to 'New group', new_group_path, :method => :get, :class => "small_button" %>
  </div>
  <div class="flex_row" >
    <%= form_tag upload_groups_file_path, :multipart => true do  %>
      <%= render "file_tag", title: "Upload file", name: "groups", tag: :file, class_name: "standard_button", height: 60, file_type: ".txt" %>
    <% end %>
  </div>
</div>
