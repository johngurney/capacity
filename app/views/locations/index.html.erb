<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="flex_row" >
  <%= button_to 'New location', new_location_path, :method => :get, :class => "small_button" %>
</div>
<div class="flex_row" >
    <%= form_tag upload_locations_file_path, :multipart => true do  %>
    <%= render "file_tag", title: "Upload file", name: "areas", tag: :file, class_name: "standard_button", height: 60, file_type: ".txt" %>
  <% end %>
</div>
