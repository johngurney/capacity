<p id="notice"><%= notice %></p>

<h1>Areas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.order(:name).each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to 'Edit', edit_area_path(area) %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="flex_col" >

  <div class="flex_row" >
    <%= button_to 'New area', new_area_path, :method => :get, :class => "small_button" %>
  </div>
  <div class="flex_row" >
    <%= form_tag upload_areas_file_path, :multipart => true do  %>
      <%= render "file_tag", title: "Upload file", name: "areas", tag: :file, class_name: "standard_button", height: 60, file_type: ".txt" %>
    <% end %>
  </div>
</div>
